# FIXO v2 Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE (Required)
# ===========================================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/fixo
# For Supabase/Railway: Get from dashboard
DATABASE_URL="postgresql://user:password@localhost:5432/fixo"

# ===========================================
# AUTHENTICATION (Required for production)
# ===========================================
# NextAuth secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# AI SERVICES (Required for AI features)
# ===========================================
# OpenAI API key for Vision analysis and translations
OPENAI_API_KEY="sk-..."

# ===========================================
# PAYMENTS (Required for monetization)
# Note: Implement AFTER domain deployment
# ===========================================
# Stripe API keys
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_PLUS=""
STRIPE_PRICE_PRO=""
STRIPE_PRICE_LIFETIME=""

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# PostHog (alternative)
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ===========================================
# MONITORING (Optional)
# ===========================================
# Sentry for error tracking
SENTRY_DSN=""

# ===========================================
# STORAGE (Optional)
# ===========================================
# Cloudflare R2 or Vercel Blob for image uploads
BLOB_READ_WRITE_TOKEN=""
