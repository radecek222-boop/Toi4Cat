# FIXO - Environment Configuration Example
# Zkopírujte tento soubor jako '.env' a vyplňte své hodnoty

# Server Configuration
PORT=3000
NODE_ENV=development

# OpenAI API Configuration
# Získejte API klíč na: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model Configuration
# Doporučujeme: gpt-4-vision-preview nebo gpt-4o pro analýzu obrázků
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Database (optional - pro produkci)
# DATABASE_URL=postgresql://user:password@localhost:5432/fixo

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# AI Analysis Settings
AI_CONFIDENCE_THRESHOLD=0.5
AI_CACHE_ENABLED=true
AI_CACHE_TTL_SECONDS=3600

# Feedback & Learning
AI_LEARNING_ENABLED=true
AI_FEEDBACK_MIN_VOTES=3
AI_SIMILARITY_THRESHOLD=0.80

# Security
SESSION_SECRET=your-secret-key-change-this-in-production
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/fixo.log
